<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Edit user</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
</head>

<body>
    <div class="container">
        <div class="row">
            <div class="col-12 mt-3">Edit user</div>
            <form action="/put-users" method="POST">
                
                <div class="form-row">
                    <div class="form-group col-6">
                        <label for="inputEmail4">First Name:</label>
                        <input type="text" class="form-control" name="firstName" placeholder="First Name"
                        value="<%=newUser.firstName %>"/>
                    </div>
                    <div class="form-group col-6">
                        <label for="inputPassword4">Last Name:</label>
                        <input type="text" class="form-control" name="lastName" placeholder="Last Name"
                        value="<%=newUser.lastName %>"/>
                    </div>
                </div>
                <div class="form-group col-6">
                    <label for="inputAddress">Phone Number:</label>
                    <input type="text" class="form-control" name="phonenumber" placeholder="Phone Number"
                    value="<%=newUser.phonenumber %>"/>
                </div>

                <div class="form-row">
                    <div class="form-group col-6">
                        <label for="inputAddress2">Address:</label>
                        <input type="text" class="form-control" name="address" placeholder="Address"
                        value="<%=newUser.address %>">
                    </div>
                    <div class="form-group col-4">
                        <label for="inputState">Gender:</label>
                        <select name="gender" class="form-control" value="<%=newUser.gender %>">
                            <option value="1">Male</option>
                            <option value="0">Female</option>
                        </select>
                    </div>
                    <div class="form-group col-2">
                        <label for="inputZip">Role:</label>
                        <select name="roleId" class="form-control" value="<%=newUser.roleId %>">
                            <option value="1">Admin</option>
                            <option value="2">Doctor</option>
                            <option value="3">Patient</option>
                        </select>
                    </div>
                </div>
                <input type="text" name="id" value="<%=newUser.id %>" hidden/>
                <button type="submit" class="btn btn-primary">Update</button>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI"
        crossorigin="anonymous"></script>
</body>

</html>